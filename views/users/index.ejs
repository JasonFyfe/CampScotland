<%- include("../partials/header") %>
<div class="ui centered cards container">
    <% users.forEach(user => { %>
    <div class="ui card">
        <div class="image" style='background-image: url("<%= user.avatar %>");'></div>
        <div class="content">
            <div class="header">
                <%= user.username %>
            </div>
            <div class="meta">
                <%= user.email %>
            </div>
        </div>
        <a href="/users/<%= user._id %>" class="ui bottom attached teal button">More Info</a>
    </div>
    <% }); %>
</div>
<%- include("../partials/footer") %>