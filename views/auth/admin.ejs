<%- include("../partials/header") %>
<div class="ui middle aligned center aligned padded grid input-grid">
    <div class="column input-form">
        <div class="ui segment">
            <form class="ui form" action="/register" method="POST">
                <h1 class="ui teal header">Admin Registration</h1>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="Username" required>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Password" required>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="shield alternate icon"></i>
                        <input type="text" name="adminCode" placeholder="Admin Code">
                    </div>
                </div>
                <button class="ui teal button">Register</button>
            </form>
        </div>
    </div>
</div>
