    <div class="ui centered segment">
        <h1>Edit Comment</h1>
        <form class="ui form" action="/campsites/<%= campsite_id %>/comments/<%= comment._id %>?_method=PUT"
            method="POST">
            <div class="field">
                <label for="comment[text]">Comment Text</label>
