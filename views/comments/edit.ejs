<%- include("../partials/header") %>
<div class="ui middle aligned center aligned padded grid input-grid">
    <div class="column input-form">
        <div class="ui centered segment">
            <h1 class="ui teal header">Edit Comment</h1>
            <form class="ui form" action="/campsites/<%= campsite_id %>/comments/<%= comment._id %>?_method=PUT"
                method="POST">
                <div class="field">
                    <label for="comment[text]">Comment Text</label>
                    <div class="ui left icon input">
                        <i class="left quote icon"></i>
                        <input type="text" name="comment[text]" value="<%= comment.text %>" required>
                    </div>
                </div>
                <div>
                    <input class="ui teal button" type="submit">
                </div>
            </form>
        </div>
        <a href="/campsites/<%= campsite_id %>">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>