<div class="ui container" id="map-container">
    <div id="map"></div>
</div>

<!-- TODO refactor map API call to be reusable across all campsites -->
<script>  
    function initMap() {
        var location = {lat: 56.111, lng: -4.630};
        map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 8,
            disableDefaultUI: true
        });
        var marker = new google.maps.Marker({position: location, map: map});
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPPuvvK3Kf0dfD25JIgIwO2XW8JPwQX58&callback=initMap" async defer></script>