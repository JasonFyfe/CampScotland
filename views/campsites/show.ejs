<%- include("../partials/header") %>
<div class="ui three column stackable grid segment container">
    <div class="ui row">
        <div class="ui centered column">
            <h1 class="ui centered header"><%= campsite.name %></h1>
        </div>
    </div>
    <div class="ui divider"></div>
    <div class="ui row">
        <div class="ui four wide column">
            <div class="ui container" id="map-container">
                <div id="map"></div>
            </div>
            <div class="ui divider"></div>
            <div class="ui raised segments">
                <div class="ui secondary segment">One</div>
                <div class="ui segment">Two</div>
                <div class="ui secondary segment">Three</div>
                <div class="ui segment">Four</div>
            </div>
        </div>
        <div class="ui twelve wide column">
            <div class="ui container">
                <div class="ui fluid image">
                    <img src="<%= campsite.image %>" alt="">
                </div>
                <div class="ui grid">
                    <div class="ui row">
                        <div class="ui eight wide column">
                            <em>Created By - <strong
                                    style="text-transform: uppercase;"><%= campsite.author.username %></strong></em>
                        </div>
                        <div class="ui eight wide column">
                            <div class="ui right aligned container">
                                <h4>Â£9.00/night</h4>
                            </div>
                        </div>
                    </div>
                    <div class="ui row">
                        <div class="ui two wide column">
                            <% if (currentUser && campsite.author.id.equals(currentUser._id)) { %>
                            <a href="/campsites/<%= campsite._id %>/edit" class="ui orange button">Edit</a>
                            <% } %>
                        </div>
                        <div class="ui two wide column">
                            <% if (currentUser && campsite.author.id.equals(currentUser._id)) { %>
                            <form class="inline fields" action="/campsites/<%= campsite._id %>?_method=DELETE"
                                method="POST">
                                <button class="negative ui button">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="ui divider"></div>
                <div class="ui content">
                    <p><%= campsite.description %></p>
                </div>
            </div>
            <div class="ui secondary segment">
                <div class="ui grid">
                    <div class="ui row">
                        <div class="ui right aligned column">
                            <a href="/campsites/<%= campsite._id %>/comments/new" class="ui teal button">Add
                                Comment</a>
                        </div>
                    </div>
                    <% campsite.comments.forEach(comment => { %>
                    <div class="ui divider"></div>
                    <div class="ui row">
                        <div class="ui five wide column">
                            Posted by - <strong
                                style="text-transform: uppercase;"><%= comment.author.username %></strong>
                        </div>
                        <div class="ui right aligned eleven wide column">
                            10 days ago
                        </div>
                    </div>
                    <!-- TODO refactor to CSS -->
                    <div class="ui row" style="padding-top: 0;">
                        <div class="ui fourteen wide column">
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                    <div class="ui row" style="padding-top: 0;">
                        <div class="ui two wide column">
                            <a href="/campsites/<%= campsite._id %>/comments/<%= comment._id %>/edit"
                                class="mini ui basic orange button">
                                <i class="edit icon"></i>
                                Edit
                            </a>
                        </div>
                        <div class="ui three wide column">
                            <form action="/campsites/<%= campsite._id %>/comments/<%= comment._id %>?_method=DELETE"
                                method="POST">
                                <button type="submit" class="mini ui basic red button">
                                    <i class="delete icon"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                    <% } %>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function initMap() {
        // TODO - Refactor to EJS tag for lat & lng pulling data from DB.
        var lat = 56.111;
        var lng = -4.630;
        var center = { lat: lat, lng: lng };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 8,
            center: center,
            scrollwheel: false,
            disableDefaultUI: true
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map
        });
    }
</script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPPuvvK3Kf0dfD25JIgIwO2XW8JPwQX58&callback=initMap"></script>
<%- include("../partials/footer") %>