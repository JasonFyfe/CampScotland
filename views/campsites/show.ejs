<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<div class="nav-correction">
    <div class="ui three column stackable grid segment container nav-correction">
        <div class="ui row">
            <h1><%= campsite.name %></h1>
        </div>
        <div class="ui divider"></div>
        <div class="ui row">
            <div class="ui four wide column">
                <div class="ui raised segments">
                    <div class="ui segment">One</div>
                    <div class="ui segment">Two</div>
                    <div class="ui segment">Three</div>
                </div>
                <div class="ui divider"></div>
                <div class="ui container" id="map-container">
                    <div id="map"></div>
                </div>
            </div>
            <div class="ui twelve wide column">
                <div class="ui container">
                    <div class="ui fluid image">
                        <img src="<%= campsite.image %>" alt="">
                    </div>
                    <div class="ui grid">
                        <div class="ui row">
                            <div class="ui three wide column">
                                <em>Created By - <%= campsite.author.username %></em>
                            </div>
                            <div class="ui two wide column">
                                <% if (currentUser && campsite.author.id.equals(currentUser._id)) { %>
                                <a href="/campsites/<%= campsite._id %>/edit" class="ui orange button">Edit</a>
                                <% } %>
                            </div>
                            <div class="ui two wide column">
                                <% if (currentUser && campsite.author.id.equals(currentUser._id)) { %>
                                <form class="inline fields" action="/campsites/<%= campsite._id %>?_method=DELETE"
                                    method="POST">
                                    <button class="negative ui button">Delete</button>
                                </form>
                                <% } %>
                            </div>
                            <div class="ui nine wide column">
                                <div class="ui right aligned container">
                                    <h4>Â£9.00/night</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ui divider"></div>
                    <div class="ui content">
                        <p><%= campsite.description %></p>
                    </div>
                </div>
                <div class="ui secondary segment">
                    <div class="ui right aligned container">
                        <a href="/campsites/<%= campsite._id %>/comments/new" class="ui teal button">Add Comment</a>
                    </div>
                    <% campsite.comments.forEach(comment => { %>
                    <div class="ui divider"></div>
                    <p>
                        <strong><%= comment.author.username %></strong> - <%= comment.text %>
                    </p>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function initMap() {
        // TODO - Refactor to EJS tag for lat & lng pulling data from DB.
        var lat = 56.111;
        var lng = -4.630;
        var center = { lat: lat, lng: lng };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 8,
            center: center,
            scrollwheel: false,
            disableDefaultUI: true
        });
        var marker = new google.maps.Marker({
            position: center,
            map: map
        });
    }
</script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPPuvvK3Kf0dfD25JIgIwO2XW8JPwQX58&callback=initMap"></script>
<%- include("../partials/footer") %>