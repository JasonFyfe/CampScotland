<%- include("../partials/header") %>
<div class="ui container">
    <div class="ui centered segment">
        <h1 class="ui teal header">Edit <%= campsite.name %></h1>
        <form class="ui form" action="/campsites/<%= campsite._id %>?_method=PUT" method="POST">
            <div class="field">
                <label for="name">Campsite Name</label>
                <div class="ui left icon input">
                    <i class="font icon"></i>
                    <input type="text" name="campsite[name]" value="<%= campsite.name %>">
                </div>
            </div>
            <div class="field">
                <label for="image">Campsite Image</label>
                <div class="ui left icon input">
                    <i class="image icon"></i>
                    <input type="text" name="campsite[image]" value="<%= campsite.image %>">
                </div>
            </div>
            <div class="field">
                <label for="description">Campsite Description</label>
                <div class="ui left icon input">
                    <i class="quote left icon"></i>
                    <input type="text" name="campsite[description]" value="<%= campsite.description %>">
                </div>
            </div>
            <div>
                <input class="ui teal button" type="submit">
            </div>
        </form>
    </div>
    <a href="/campsites/<%= campsite.id %>">Go Back</a>
</div>
<%- include("../partials/footer") %>